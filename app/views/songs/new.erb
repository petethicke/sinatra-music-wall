
<% if @song && @song.errors.any? %>
  <div>
    <strong>There's something wrong with your song! Check it:</strong>
    <ul>
      <% @song.errors.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class = wrapper>
<form method="post" action="/songs">
  <div>
    <label>Song Title:</label>
    <input type="text" name="songtitle" value="<%= @song && @song.songtitle %>">
  </div>
  <div>
    <label>Author:</label>
    <input type="text" name="author"value="<%= @song && @song.author %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="url" name="url"value="<%= @song && @song.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
</div>
